[template public generateTable(aTable : Table)]
DROP TABLE IF EXISTS [ aTable.name /];
CREATE TABLE [ aTable.name /](
[for (c : Column | aTable.columns )]
[if isLastColumn(c,aTable) ]
[ c.generateColumn() /]
[else]
[ c.generateColumn() /],
[/if]
[/for]
);
[/template]
